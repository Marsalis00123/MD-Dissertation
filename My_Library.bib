@article{PercutaneousCTGuidedBone2023,
  title = {Percutaneous {{CT-Guided Bone Biopsies}}: {{Indications}}, {{Feasibility}} and {{Diagnostic Yield}} in the {{Different Skeletal Sites-From}} the {{Skull}} to the {{Toe}}},
