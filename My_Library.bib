  keywords = {Aged,Anti-Infective Agents,Discitis,Female,Humans,Leukocyte Count,Male,Methicillin Resistance,Middle Aged,Neurosurgical Procedures,Recurrence,Retrospective Studies,Risk Factors,Sepsis,Sex Distribution,Spine,Staphylococcal Infections,Staphylococcus aureus,Survival Rate,Vancomycin}
}

@article{HematogenousPyogenicSpinal2000,
  title = {Hematogenous Pyogenic Spinal Infections and Their Surgical Management},
