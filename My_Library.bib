@article{SuggestionsManagingPyogenic2007,
  title = {Suggestions for Managing Pyogenic (Non-Tuberculous) Discitis in Adults},
  author = {Grados, Franck and Lescure, Fran{\c c}ois Xavier and Senneville, Eric and Flipo, Ren{\'e} Marc and Schmit, Jean Luc and Fardellone, Patrice},
