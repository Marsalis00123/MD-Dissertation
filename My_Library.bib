  pmid = {37334278},
  file = {/Users/nicolas/Zotero/storage/5FUBHVXL/Jiang et al. - 2023 - Erector Spinae Plane Block as an Analgesic Intervention in Acute Rib Fractures A Scoping Review.pdf}
