@article{ImagingCharacteristicsCT2022,
  title = {Imaging Characteristics and {{CT}} Sensitivity for Pyogenic Spinal Infections},
  author = {Shroyer, Steven and Boys, Greg and April, Michael D. and Long, Brit and Mehta, Sumeru and Davis, William T.},
  year = {2022},
