  pmid = {11515764},
  keywords = {Adolescent,Adult,Aged,Aged 80 and over,Diagnosis Differential,Female,Humans,Lumbar Vertebrae,Male,Middle Aged,Osteomyelitis,Retrospective Studies,Risk Factors,Sacrum,Sex Distribution,Spinal Diseases,Sweden,Treatment Outcome}
}

