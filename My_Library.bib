  author = {{Andreas J. Bartsch} and Bartsch, Andreas J. and {Gy{\"o}rgy A. Homola} and Homola, Gy{\"o}rgy A. and {Armin Biller} and Biller, Armin and {L. Solymosi} and Solymosi, Laszlo and {Martin Bendszus} and Bendszus, Martin},
