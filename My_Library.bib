@article{HematogenousMethicillinresistantStaphylococcus2007,
  title = {Hematogenous Methicillin-Resistant {{Staphylococcus}} Aureus Spondylodiscitis},
  author = {{Al-Nammari}, Shafic Said and Lucas, Jonathan D. and Lam, Khai S.},
  year = {2007},
