  author = {Ababei, Alexandru and Hrib, Luciana Andreea and Iancu, Adalia Cristiana and Hadarag, Andra-Valeria and Khebbaiz, Ahmad and V{\u a}t{\u a}{\textcommabelow s}escu, Radu and Bogdan, {\textcommabelow S}tefan},
